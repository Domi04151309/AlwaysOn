<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_icon_height"
            android:layout_marginTop="@dimen/about_divider_margin"
            android:contentDescription="@string/app_name"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/about_item_margin"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/versionTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/about_version" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/about_divider_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="?dialogPreferredPadding"
        android:paddingEnd="?dialogPreferredPadding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="@dimen/about_item_margin"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/about_item_margin"
            android:text="@string/app_by" />

        <TextView
            android:id="@+id/github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_github"
            android:drawablePadding="@dimen/about_item_margin"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/about_item_margin"
            android:text="@string/about_github" />

        <TextView
            android:id="@+id/license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/about_item_margin"
            android:drawableStart="@drawable/ic_scales"
            android:drawablePadding="@dimen/about_item_margin"
            android:gravity="center_vertical"
            android:text="@string/about_license" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_warning"
            android:drawablePadding="@dimen/about_item_margin"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/about_item_margin"
            android:text="@string/about_damage" />

        <TextView
            android:id="@+id/icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/about_item_margin"
            android:drawableStart="@drawable/ic_palette"
            android:drawablePadding="@dimen/about_item_margin"
            android:gravity="center_vertical"
            android:text="@string/about_icons" />

    </LinearLayout>

</LinearLayout>